{
  "id": "DCBEF2C9-E4F4-4929-82B2-EA7FC9166109",
  "name": "AzureWebPowerShellDeployment",
  "friendlyName": "Azure Web Site Deployment",
  "description": "Deploy a website to Microsoft Azure",
  "category": "Deploy",
  "visibility": [
                "Build",
                "Release"
                ],  
  "author": "Microsoft Corporation",
  "version": {
    "Major": 1,
    "Minor": 0,
    "Patch": 10
  },
  "demands": [
    "azureps"
  ],
  "minimumAgentVersion": "1.83.0",
  "inputs": [
    {
      "name": "ConnectedServiceName",
      "type": "connectedService:Azure",
      "label": "Azure Subscription",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Azure subscription to target for deployment."
    },
    {
      "name": "WebSiteLocation",
      "type": "pickList",
      "label": "Web Site Location",
      "defaultValue": "South Central US",
      "required": true,
      "helpMarkDown": "Select a region for deployment.",
      "options": {
        "South Central US": "South Central US",
        "North Europe": "North Europe",
        "West Europe": "West Europe",
        "North Central US": "North Central US",
        "West US": "West US",
        "East Asia": "East Asia",
        "East US": "East US",
        "Southeast Asia": "Southeast Asia",
        "East US2": "East US2",
        "Japan West": "Japan West",
        "Japan East": "Japan East",
        "Central US": "Central US",
        "Brazil South": "Brazil South"
      },
      "properties": {
		"EditableOptions": "True"
	  }
	},
    {
      "name": "WebSiteName",
      "type": "pickList",
      "label": "Web Site Name",
      "defaultValue": "",
      "required": true
    },
    {
      "name": "Package",
      "type": "string",
      "label": "Package",
      "defaultValue": "",
      "helpMarkDown": "Path of package under the default artifact directory.",
      "required": true
    },
    {
      "name": "AdditionalArguments",
      "type": "string",
      "label": "Additional Arguments",
      "defaultValue": "",
      "required": false
    }
  ],
  "sourceDefinitions": [
    {
        "target": "WebSiteName",
        "endpoint": "https://management.core.windows.net/{$ConnectedServiceName}/services/webspaces/{$WebSiteLocation}Webspace/sites",
        "selector": "xpath://Site/Name",
        "authKey": "{$ConnectedServiceName}"
    }
  ],
  "instanceNameFormat": "Azure Deployment: $(WebSiteName)",
  "execution": {
    "AzurePowerShell": {
      "target": "$(currentDirectory)\\Publish-AzureWebDeployment.ps1",
      "argumentFormat": "",
      "workingDirectory": "$(currentDirectory)"
    }
  }
}
