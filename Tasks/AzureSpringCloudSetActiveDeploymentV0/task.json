{
    "id": "f4b65809-a056-425a-b199-0adb8e5a3383",
    "name": "AzureSpringCloudSetActiveDeployment",
    "friendlyName": "Azure Spring Cloud Set Prod",
    "description": "Deploy an Azure Azure Spring Cloud app into an existing deployment",
    "helpUrl": "https://aka.ms/azurespringcloud",
    "helpMarkDown": "[Learn more about this task](https://aka.ms/azurespringcloud)",
    "category": "Deploy",
    "visibility": [
        "Build",
        "Release"
    ],
    "runsOn": [
        "Agent",
        "DeploymentGroup"
    ],
    "author": "Microsoft Corporation",
    "version": {
        "Major": 0,
        "Minor": 0,
        "Patch": 5
    },
    "minimumAgentVersion": "2.104.1",
    "groups": [
        {
            "name": "ApplicationAndConfigurationSettings",
            "displayName": "Application and Configuration Settings",
            "isExpanded": false
        }
    ],
    "inputs": [
        {
            "name": "ConnectedServiceName",
            "aliases": [
                "azureSubscription"
            ],
            "type": "connectedService:AzureRM",
            "label": "Azure subscription",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Select the Azure Resource Manager subscription for the deployment."
        },
        {
            "name": "SpringCloudService",
            "type": "pickList",
            "label": "Azure Spring Cloud Name",
            "required": true,
            "properties": {
                "EditableOptions": "False"
            },
            "helpMarkDown": "Select the Azure Spring Cloud service to which to deploy."
        },
        {
            "name": "AppName",
            "type": "pickList",
            "label": "App",
            "required": true,
            "properties": {
                "EditableOptions": "False"
            },
            "helpMarkDown": "Select the Azure Spring Cloud app to deploy."
        },
        {
            "name": "DeploymentName",
            "type": "pickList",
            "label": "Deployment",
            "required": true,
            "properties": {
                "EditableOptions": "False"
            },
            "helpMarkDown": "Select a deployment to which to deploy the app."
        },
        {
            "name": "verbose",
            "type": "boolean",
            "label": "Verbose",
            "groupName": "ApplicationAndConfigurationSettings",
            "defaultValue": true,
            "required": true,
            "helpMarkDown": "Whether or not detailed output should be shown"
        }
    ],
    "outputVariables": [
    ],
    "dataSourceBindings": [
        {
            "target": "SpringCloudService",
            "endpointId": "$(ConnectedServiceName)",
            "resultTemplate": "{\"Value\":\"{{{id}}}\",\"DisplayValue\":\"{{{name}}}\"}",
            "resultSelector": "jsonpath:$.value[*]",
            "endpointUrl": "{{endpoint.url}}/subscriptions/{{endpoint.subscriptionId}}/providers/Microsoft.AppPlatform/Spring?api-version=2019-05-01-preview"
        },
        {
            "target": "AppName",
            "endpointId":  "$(ConnectedServiceName)",
            "parameters": {
                "SpringCloudService": "$(SpringCloudService)"
            },
            "endpointUrl": "{{endpoint.url}}/{{SpringCloudService}}/apps?api-version=2019-05-01-preview",
            "resultSelector": "jsonpath:$.value[*].name"
        },
        {
            "target": "DeploymentName",
            "endpointId": "$(ConnectedServiceName)",
            "parameters": {
                "SpringCloudService": "$(SpringCloudService)",
                "AppName": "$(AppName)"
            },
            "endpointUrl": "{{endpoint.url}}/{{SpringCloudService}}/apps/{{AppName}}/deployments?api-version=2019-05-01-preview",
            "resultSelector": "jsonpath:$.value[*].name"
        }
    ],
    "instanceNameFormat": "Azure Spring Cloud Set Production: $(AppName)",
    "execution": {
        "Node10": {
            "target": "azurespringclouddeployment.js"
        }
    },
    "messages": {
        "MultipleResourceGroupFoundForService": "Multiple resource group found for Azure Spring Cloud '%s'.",
        "UnableToGetDeploymentUrl": "Unable to get deployment URL for for Azure Spring Cloud '%s', Error: '%s'"
    }
}