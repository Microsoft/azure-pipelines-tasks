{
    "id": "ea543240-b4a8-11e5-8761-bb4cd4a06cfc",
    "name": "DevEnvBuild",
    "friendlyName": "DevEnv build (Visual Studio)",
    "description": "Build a solution via the visual studio command-line invocation, devenv.cmd",
    "author": "Experient, Inc.",
    "helpMarkDown": "Build a solution via the visual studio command-line invocation, devenv.cmd",
    "category": "Build",
    "visibility": [
        "Build"
    ],
    "demands": [
        "VisualStudio_IDE"
    ],
    "version": {
        "Major": "0",
        "Minor": "1",
        "Patch": "0"
    },
    "minimumAgentVersion": "1.83.0",
    "instanceNameFormat": "DevEnv build: $(project)",
    "inputs": [
        {
            "name": "project",
            "type": "filePath",
            "label": "Solution",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Solution to build"
        },
        {
            "name": "buildPlatform",
            "type": "string",
            "label": "Platform",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "Build platform; only applied when a configuration is specified. Leave blank for solution default."
        },
        {
            "name": "buildCfg",
            "type": "string",
            "label": "Configuration",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "Build configuration; leave blank for solution default."
        },
        {
            "name": "vsVersion",
            "type": "pickList",
            "label": "Visual Studio Version",
            "required": true,
            "defaultValue": "latest",
            "options": {
                "latest": "Latest",
                "14.0": "Visual Studio 2015",
                "12.0": "Visual Studio 2013",
                "11.0": "Visual Studio 2012"
            }
        },
        {
            "name": "cwd",
            "type": "filePath",
            "label": "Working Directory",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "Current working directory when DevEnvBuild is run."
        }
    ],
    "execution": {
        "PowerShell": {
            "target": "$(currentDirectory)\\DevEnvBuild.ps1",
            "argumentFormat": "",
            "workingDirectory": "$(currentDirectory)"
        }
    }
}